<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<display-name>LogInValidation</display-name>
	<welcome-file-list>
		<welcome-file>HomePage.jsp</welcome-file>
	</welcome-file-list>
	<filter>
		<filter-name>LoginFilter</filter-name>
		<filter-class>com.capgemini.LoginFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>LoginFilter</filter-name>
		<url-pattern>/LoginServlet</url-pattern>
	</filter-mapping>
	<listener>
		<listener-class>com.capgemini.MySessionListener</listener-class>
	</listener>
	<servlet>
		<servlet-name>PreLoginServlet</servlet-name>
		<servlet-class>com.capgemini.PreLoginServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>FetchDataServlet</servlet-name>
		<servlet-class>com.capgemini.FetchDataServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>com.capgemini.LoginServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>PreRegisterServlet</servlet-name>
		<servlet-class>com.capgemini.PreRegisterServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>RegistrationServlet</servlet-name>
		<servlet-class>com.capgemini.RegistrationServlet</servlet-class>
	</servlet>
	
	<servlet>
	<servlet-name>LogoutServlet</servlet-name>
	<servlet-class>com.capgemini.LogoutServlet</servlet-class>
	</servlet>

	<filter>
		<filter-name>RegisterFilter</filter-name>
		<filter-class>com.capgemini.RegisterFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>RegisterFilter</filter-name>
		<url-pattern>/Registration</url-pattern>
	</filter-mapping>

	<servlet-mapping>
		<servlet-name>PreLoginServlet</servlet-name>
		<url-pattern>/PreLoginServlet</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>FetchDataServlet</servlet-name>
		<url-pattern>/FetchData</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/LoginServlet</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>PreRegisterServlet</servlet-name>
		<url-pattern>/PreRegister</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>RegistrationServlet</servlet-name>
		<url-pattern>/Registration</url-pattern>
	</servlet-mapping>
	<listener>
	<listener-class>com.capgemini.MySessionListener</listener-class>
	</listener>
	
	<servlet-mapping>
	<servlet-name>LogoutServlet</servlet-name>
	<url-pattern>/ss</url-pattern>
	</servlet-mapping>
	
	<servlet>
	<servlet-name>SendMailServlet</servlet-name>
	<servlet-class>com.capgemini.SendMailServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	<servlet-name>SendMailServlet</servlet-name>
	<url-pattern>/SendMailServlet</url-pattern>
	</servlet-mapping>
</web-app>
